<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".carrito">

  <!-- Primer álbum -->
  <ImageView
      android:id="@+id/imageView10"
      android:layout_width="197dp"
      android:layout_height="146dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/albumadele" />

  <TextView
      android:id="@+id/album1_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="Album 1\n12 canciones\n$10"
      app:layout_constraintStart_toEndOf="@+id/imageView10"
      app:layout_constraintTop_toTopOf="@+id/imageView10" />

  <!-- Segundo álbum -->
  <ImageView
      android:id="@+id/imageView11"
      android:layout_width="197dp"
      android:layout_height="146dp"
      android:layout_marginTop="16dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView10"
      app:srcCompat="@drawable/albummichael" />

  <TextView
      android:id="@+id/album2_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="Album 2\n10 canciones\n$12"
      app:layout_constraintStart_toEndOf="@+id/imageView11"
      app:layout_constraintTop_toTopOf="@+id/imageView11" />

  <!-- Tercer álbum -->
  <ImageView
      android:id="@+id/imageView12"
      android:layout_width="197dp"
      android:layout_height="146dp"
      android:layout_marginTop="16dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView11"
      app:srcCompat="@drawable/albumwos" />

  <TextView
      android:id="@+id/album3_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="Album 3\n8 canciones\n$15"
      app:layout_constraintStart_toEndOf="@+id/imageView12"
      app:layout_constraintTop_toTopOf="@+id/imageView12" />

  <!-- Botón de comprar -->

  <!-- TextView para el total -->
  <Button
      android:id="@+id/button4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="104dp"
      android:layout_marginEnd="152dp"
      android:text="comprar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView12" />

  <TextView
      android:id="@+id/tvTotal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:text="0.0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button4" />

  <Button
      android:id="@+id/button5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Añadir"
      tools:layout_editor_absoluteX="251dp"
      tools:layout_editor_absoluteY="92dp"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/button6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Añadir"
      tools:layout_editor_absoluteX="248dp"
      tools:layout_editor_absoluteY="259dp"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/button7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Añadir"
      tools:layout_editor_absoluteX="254dp"
      tools:layout_editor_absoluteY="448dp"
      tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
